<h1>My List</h1>

<h2><%= @list.name %></h2>
<% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <%= movie.title %>
    <%= movie.rating %>
    <%= bookmark.comment %>
    <%= link_to 'Delete Bookmark', bookmark_path(bookmark), method: :delete, class: 'btn btn-flat' %>
<% end %>

<%= link_to 'Bookmark', new_list_bookmark_path(@list), class: 'btn btn-flat' %>


